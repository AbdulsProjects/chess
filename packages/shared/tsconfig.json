{
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "moduleResolution": "node",
      "target": "ES6",
      "module": "commonjs",
      "lib": ["ES6", "DOM"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@react-chess/shared/src/*": ["./*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }